<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tarikalovebird.money.Add_Target"
    tools:showIn="@layout/activity_add__target">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:animationCache="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TableRow
                    android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="0.09"
                android:gravity="center"
                    android:background="@color/sub"
                    android:layout_margin="20dp">


                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/main"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <Button
                            android:id="@+id/button5"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:onClick="onPickImage"
                            android:background="@drawable/cametest" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:orientation="horizontal">

                            <HorizontalScrollView

                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <RadioGroup
                                        android:id="@+id/TypeTargetRaioGroup"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@color/sub"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <RadioButton
                                            android:id="@+id/TypeLearning"
                                            style="@style/AddTypeTarget"
                                            android:background="@drawable/type_book"
                                            android:checked="true" />

                                        <RadioButton
                                            android:id="@+id/TypeToy"
                                            style="@style/AddTypeTarget"
                                            android:background="@drawable/type_toy" />

                                        <RadioButton
                                            android:id="@+id/TypeGift"
                                            style="@style/AddTypeTarget"
                                            android:background="@drawable/type_gift" />

                                        <RadioButton
                                            android:id="@+id/TypeMusic"
                                            style="@style/AddTypeTarget"
                                            android:background="@drawable/type_music" />

                                        <RadioButton
                                            android:id="@+id/TypeTechno"
                                            style="@style/AddTypeTarget"
                                            android:background="@drawable/type_techno" />

                                        <RadioButton
                                            android:id="@+id/AddTypeTarget"
                                            style="@style/AddTypeTarget"
                                            android:background="@drawable/type_add"
                                            android:visibility="gone" />

                                    </RadioGroup>

                                </LinearLayout>
                            </HorizontalScrollView>
                        </LinearLayout>

                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center"
                    android:gravity="center"
                    android:padding="5sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.2"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="26dp"
                                android:layout_gravity="center"
                                android:gravity="center_vertical|end"
                                android:text="ชื่อ"
                                android:textSize="20sp" />

                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/ADDTargetName"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:hint="Target" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="0.2"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="ราคา"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/ADDTargetPrice"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ems="10"
                                android:gravity="center"
                                android:inputType="numberDecimal" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="บาท"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="5sp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="ระยะเวลา"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/ADDDayTargey"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ems="10"
                                android:gravity="center"
                                android:inputType="number" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="วัน"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="0.15"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/OkbuttonTarget"
                            android:layout_width="125sp"
                            android:layout_height="60sp"
                            android:layout_gravity="center_vertical|end"
                            android:layout_margin="20sp"
                            android:background="@color/gr"
                            android:gravity="center"
                            android:text="OK"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/CancelbuttonTarget"
                            android:layout_width="125sp"
                            android:layout_height="60sp"
                            android:layout_gravity="center"
                            android:layout_margin="20sp"
                            android:background="@android:color/holo_red_light"
                            android:gravity="center"
                            android:text="CANCEL"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp" />
                    </LinearLayout>

                </TableRow>

            </TableLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
