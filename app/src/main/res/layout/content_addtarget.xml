<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tarikalovebird.money.AddTarget">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:animationCache="false"
        android:gravity="bottom|center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="420sp"
                android:layout_height="600sp"
                android:animationCache="false"
                android:gravity="bottom|center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:gravity="center">


                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <RadioGroup
                                android:id="@+id/Type"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/TypeFood"
                                    android:button="@null"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:background="@drawable/type_food"
                                    android:padding="10sp"
                                    android:text="@string/FoodType" />

                                <RadioButton
                                    android:id="@+id/TypeLearning"
                                    android:button="@null"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:background="@drawable/type_gift"
                                    android:gravity="center"
                                    android:padding="10sp" />

                                <RadioButton
                                    android:id="@+id/TypeGift"
                                    android:button="@null"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/type_gift"
                                    android:gravity="center"
                                    android:padding="10sp"
                                    android:text="@string/Gift" />

                                <RadioButton
                                    android:id="@+id/TypeMusic"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:button="@null"
                                    android:layout_weight="1"
                                    android:background="@drawable/type_music"
                                    android:gravity="center"
                                    android:padding="10sp"
                                    android:text="@string/MusicType" />

                                <RadioButton
                                    android:id="@+id/TypeTechno"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:button="@null"
                                    android:layout_weight="1"
                                    android:background="@drawable/type_techno"
                                    android:gravity="center"
                                    android:padding="10sp"
                                    android:text="@string/TechonoType" />

                                <RadioButton
                                    android:id="@+id/AddType"
                                    android:button="@null"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/type_add"
                                    android:gravity="center"
                                    android:padding="10sp"
                                    android:text="@string/AddType" />

                            </RadioGroup>
                        </LinearLayout>
                    </HorizontalScrollView>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                        </LinearLayout>
                    </ScrollView>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5sp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="ชื่อ"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="40sp"
                        android:layout_weight="0.7"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/TargetName"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:hint="Target" />
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5sp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="ราคา"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/TargetPrice"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="10.00"
                            android:inputType="numberDecimal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text="บาท"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5sp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="จำนวนวัน"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/DayTargey"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="30"
                            android:inputType="numberDecimal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="วัน"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="0.15"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/OkbuttonTarget"
                            android:layout_width="125sp"
                            android:layout_height="60sp"
                            android:layout_gravity="center_vertical|end"
                            android:layout_margin="20sp"
                            android:background="@android:color/holo_blue_dark"
                            android:gravity="center"
                            android:text="ยืนยัน"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/CancelbuttonTarget"
                            android:layout_width="125sp"
                            android:layout_height="60sp"
                            android:layout_gravity="center"
                            android:layout_margin="20sp"
                            android:background="@android:color/holo_red_light"
                            android:gravity="center"
                            android:text="ยกเลิก"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </TableRow>

            </TableLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
