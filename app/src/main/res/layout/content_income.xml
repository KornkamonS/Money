<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_weight="0.14"></LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="24dp"
            android:layout_height="match_parent"></LinearLayout>

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_dialog_info"
            android:id="@+id/imageButton" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="24dp"
            android:layout_height="match_parent"></LinearLayout>

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_dialog_info"
            android:id="@+id/imageButton2" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="24dp"
            android:layout_height="match_parent"></LinearLayout>

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_dialog_info"
            android:id="@+id/imageButton3" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="24dp"></LinearLayout>

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_add"
            android:id="@+id/imageButton4" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="24dp"
            android:layout_height="match_parent"></LinearLayout>
    </TableRow>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_weight="0.08"></LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="30dp"
            android:layout_height="match_parent"></LinearLayout>

        <TextView
            android:text="NAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textColor="#000000"
            android:textSize="55px"
            android:gravity="center" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="20dp"
            android:layout_height="match_parent"></LinearLayout>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            android:background="@android:drawable/editbox_background"
            tools:gravity="center" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:layout_weight="0.05">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="30dp"
            android:layout_height="match_parent"></LinearLayout>

        <TextView
            android:text="ราคา"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textColor="#000000"
            android:textSize="55px"
            android:gravity="center"

            android:layout_gravity="center" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="33dp"></LinearLayout>

        <EditText
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/editText2"
            android:background="@android:drawable/editbox_background"
            android:layout_gravity="center"
            android:layout_width="180dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="15dp"
            android:layout_height="match_parent"></LinearLayout>

        <TextView
            android:text="บาท"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_gravity="center"
            android:textSize="55px"
            android:textColor="#000000"
            />


    </TableRow>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:layout_weight="0.16"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/spinner"
            android:background="@android:drawable/btn_dropdown"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center|bottom"
            android:gravity="center_vertical|center|start" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_weight="0.09"></LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.21" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="50dp"
            android:layout_height="match_parent"></LinearLayout>

        <Button
            android:text="OK"
            android:layout_height="wrap_content"
            android:id="@+id/OK"
            android:layout_width="120dp"
            android:background="@color/gr"
            android:textColor="#FFFFFF"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="25dp"
            android:layout_height="match_parent"></LinearLayout>

        <Button
            android:text="CANCEL"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:background="@color/colorAccent"
            android:textColor="#FFFFFF"
            />
    </TableRow>

</LinearLayout>