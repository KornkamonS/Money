<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tarikalovebird.money.Add_Outcome"
    tools:showIn="@layout/activity_add__outcome">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="30dp"
                    android:paddingTop="30dp">

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <RadioGroup
                                android:id="@+id/TypeExp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/gift2"
                                    style="@style/AddType"
                                    android:background="@drawable/food_type"
                                    android:checked="true" />

                                <RadioButton
                                    android:id="@+id/oil"
                                    style="@style/AddType"
                                    android:background="@drawable/oil_type" />

                                <RadioButton
                                    android:id="@+id/home"
                                    style="@style/AddType"
                                    android:background="@drawable/home_type" />

                                <RadioButton
                                    android:id="@+id/elect"
                                    style="@style/AddType"
                                    android:background="@drawable/elect_type" />

                                <RadioButton
                                    android:id="@+id/shop"
                                    style="@style/AddType"
                                    android:background="@drawable/shop_type" />

                                <RadioButton
                                    android:id="@+id/entertain"
                                    style="@style/AddType"
                                    android:background="@drawable/entertain_type" />

                                <RadioButton
                                    android:id="@+id/pen"
                                    style="@style/AddType"
                                    android:background="@drawable/pen_type" />

                                <RadioButton
                                    android:id="@+id/study"
                                    style="@style/AddType"
                                    android:background="@drawable/study_type" />

                                <RadioButton
                                    android:id="@+id/add2"
                                    style="@style/AddType"
                                    android:background="@drawable/add2_type" />

                            </RadioGroup>
                        </LinearLayout>
                    </HorizontalScrollView>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:gravity="center_vertical|center"
                            android:text="ชื่อ"
                            android:textColor="#000000"
                            android:textSize="55px" />

                        <LinearLayout
                            android:layout_width="210dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_weight="1.39"
                            android:gravity="center"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/expenseName"
                                android:layout_width="200dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@android:drawable/editbox_background"
                                android:ems="10"
                                android:gravity="center"
                                android:inputType="textPersonName"
                                android:textColor="@color/colorPrimaryDark"
                                tools:gravity="center" />
                        </LinearLayout>

                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="จำนวน"
                            android:textColor="#000000"
                            android:textSize="55px" />

                        <LinearLayout
                            android:layout_width="170dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/expensePrice"
                                android:layout_width="160dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@android:drawable/editbox_background"
                                android:ems="10"
                                android:gravity="center"
                                android:inputType="numberDecimal"
                                android:textColor="@color/colorPrimaryDark" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/bath"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="บาท"
                            android:textColor="#000000"
                            android:textSize="55px" />

                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="วันที่"
                            android:textColor="#000000"
                            android:textSize="55px" />

                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/seldate"

                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:background="@color/bg"
                                android:gravity="center"
                                android:textColorLink="@color/colorPrimaryDark" />
                        </LinearLayout>
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/expenseSpin"
                            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                            android:layout_width="wrap_content"
                            android:layout_height="55dp"
                            android:layout_gravity="center"
                            android:gravity="center_vertical|center|start" />
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/expenseOk"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:background="@color/gr"
                            android:gravity="center"
                            android:text="OK"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp" />

                        <LinearLayout
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"></LinearLayout>

                        <Button
                            android:id="@+id/expenseCancel"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:background="@android:color/holo_red_light"
                            android:text="CANCEL"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp" />
                    </LinearLayout>

                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
