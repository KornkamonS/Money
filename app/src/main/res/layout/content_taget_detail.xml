<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tarikalovebird.money.TagetDetail"
    tools:showIn="@layout/activity_taget_detail">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/targetName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:gravity="center"
                android:text="Target"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <ImageView
                android:id="@+id/targetpicc"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_margin="20sp"
                app:srcCompat="@drawable/ic_menu_gallery" />


            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="Progress :"
                android:textSize="20sp" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="300sp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@android:color/holo_orange_dark"
                android:indeterminate="false"
                android:max="100"
                android:progressBackgroundTint="@color/colorAccent"
                android:progressTint="@android:color/holo_green_light" />


            <TextView
                android:id="@+id/targetPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50sp"
                android:layout_marginTop="10sp"
                android:padding="10sp"
                android:text="Target Price : 0 บาท"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/totaltarget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50sp"
                android:padding="10sp"
                android:text="เงินที่ต้องเก็บเพิ่ม : 0 บาท"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/startDatetext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50sp"
                android:padding="10sp"
                android:text="วันที่เริ่มเก็บเงิน : 0-0-0"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Dalaytext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50sp"
                android:padding="10sp"
                android:text="จำนวนวันที่เกินจากเป้าหมาย : 0"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
