<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tarikalovebird.money.TagetDetail"
    tools:showIn="@layout/activity_taget_detail">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:id="@+id/DetialtargetName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:gravity="center"
                android:text="Target"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <ImageView
                android:id="@+id/Detialtargetpicc"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_margin="20sp"
                app:srcCompat="@drawable/ic_menu_gallery" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:text="Progress :"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/DetialPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:text="0%"
                    android:textSize="20sp" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/DetialprogressBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="300sp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="#00394263"
                android:indeterminate="false"
                android:max="100"
                android:progressBackgroundTint="@color/sub"
                android:progressTint="@android:color/holo_green_dark"
                android:theme="@style/Base.Widget.AppCompat.ProgressBar.Horizontal" />


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/Detialtargetpricetext"
                            android:layout_width="100sp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40sp"
                            android:layout_marginTop="10sp"
                            android:padding="10sp"
                            android:text="Price :"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/DetialtargetPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:gravity="end"
                            android:padding="10sp"
                            android:text="0"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:gravity="start"
                            android:padding="10sp"
                            android:text=" บาท"
                            android:textSize="20sp" />

                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/DetialYouHave"
                            android:layout_width="100sp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40sp"
                            android:padding="10sp"
                            android:text="Have :"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/Detialhave"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:padding="10sp"
                            android:text="0"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/Detialunit1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:padding="10sp"
                            android:text=" บาท"
                            android:textSize="20sp" />

                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/Detialtotaltargettext"
                            android:layout_width="100sp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40sp"
                            android:layout_weight="0.03"
                            android:padding="10sp"
                            android:text="Rest :"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/Detialtotaltarget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:padding="10sp"
                            android:text="0"
                            android:textColor="@color/colorAccent"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/Detialunit3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:padding="10sp"
                            android:text=" บาท"
                            android:textSize="20sp" />

                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/Detialstarttext"
                            android:layout_width="100sp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40sp"
                            android:padding="10sp"
                            android:text="Start :"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/DetialstartDatetext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10sp"
                            android:text="0-0-0"
                            android:textSize="20sp" />

                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/DetialDalaytext"
                            android:layout_width="100sp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40sp"
                            android:padding="10sp"
                            android:text="Delay :"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/Detialdelay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10sp"
                            android:text="0"
                            android:textSize="20sp" />
                    </LinearLayout>

                </TableRow>
            </TableLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
